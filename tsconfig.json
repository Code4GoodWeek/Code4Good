{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@Code4Good/ui": [
        "libs/ui/src/index.ts"
      ],
      "@Code4Good/utils": [
        "libs/utils/src/index.ts"
      ],
      "@Code4Good/feature-projects": [
        "libs/feature-projects/src/index.ts"
      ],
      "@Code4Good/feature-user": [
        "libs/feature-user/src/index.ts"
      ],
      "@Code4Good/state": [
        "libs/state/src/index.ts"
      ],
      "@Code4Good/feature-project-detail": [
        "libs/feature-project-detail/src/index.ts"
      ],
      "@Code4Good/feature-auth": [
        "libs/feature-auth/src/index.ts"
      ]
    },
    "module": "es2015"
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
